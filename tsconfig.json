{
	"compilerOptions": {
		"outDir": "commonjs",
		"target": "esNext",
		"baseUrl": "./src",
		"lib": ["esNext", "dom"],
		"esModuleInterop": true,
		"types": [
			"babylonjs",
			"babylonjs-gui"
		],
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"moduleResolution": "Node"
	},
	"include": ["src/app.ts"],
	"exclude": ["node_modules"]
}
